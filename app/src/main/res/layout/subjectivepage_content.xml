<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp">
    
    <TextView
        android:layout_marginLeft="30dp"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toTopOf="@id/subjective_answer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/subjective_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp"
        android:text="1. 가장 낮은 자리에서 이끄는 리더십은?"/>

    <ImageView
        android:id="@+id/correct_circle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginVertical="10dp"
        app:layout_constraintHorizontal_bias="0.01"
        android:background="@drawable/ic_radio_button_unchecked_black_24dp"
        android:visibility="invisible"
        />


    <EditText
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subjective_question"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="text"
        android:singleLine="true"
        android:id="@+id/subjective_answer"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="20dp"
        android:hint="답을 입력해주세요"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>